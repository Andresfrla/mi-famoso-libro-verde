{
  "expo": {
    "name": "Mi Famoso Libro Verde",
    "slug": "mi-libro-verde",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo-app.png",
    "scheme": "milibroverde",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.milibroverde.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#22C55E",
        "foregroundImage": "./assets/images/logo-app.png",
        "backgroundImage": "./assets/images/logo-app.png",
        "monochromeImage": "./assets/images/logo-app.png"
      },
      "package": "com.milibroverde.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#F6F8F6",
          "dark": {
            "backgroundColor": "#102210"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "La aplicaci칩n necesita acceso a tus fotos para subir im치genes de recetas.",
          "cameraPermission": "La aplicaci칩n necesita acceso a la c치mara para tomar fotos de recetas."
        }
      ],
      "react-native-google-mobile-ads"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
